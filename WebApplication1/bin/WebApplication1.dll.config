<?xml version="1.0"?>
<configuration>
	<system.web>
		<!-- Hiển thị lỗi chi tiết -->
		<customErrors mode="Off" />

		<compilation debug="true">
			<assemblies>
				<!-- Tên assembly đúng với DLL bạn build -->
				<add assembly="ClassLibrary1"/>
			</assemblies>
		</compilation>

		<authentication mode="None" />
		<authorization>
			<allow users="*"/>
		</authorization>
	</system.web>

	<system.webServer>
		<handlers>
			<add name="ApiHandler" path="api.aspx" verb="*"
				 type="System.Web.UI.PageHandlerFactory"
				 resourceType="Unspecified" requireAccess="Script" />
		</handlers>
	</system.webServer>
</configuration>